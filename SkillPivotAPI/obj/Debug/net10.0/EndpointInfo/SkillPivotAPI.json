  "components": {
    "schemas": {
      "Company": {
        "required": [
          "companyName"
        ],
        "type": "object",
        "properties": {
          "companyId": {
            "type": "integer",
            "format": "int32"
          },
          "companyName": {
            "minLength": 1,
            "type": "string"
          },
          "contactEmail": {
            "type": "string",
            "nullable": true
          },
          "industry": {
            "type": "string",
            "nullable": true
          },
          "website": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "location": {
            "type": "string",
            "nullable": true
          },
          "isVerified": {
            "type": "boolean"
          },
          "registeredDate": {
            "type": "string",
            "format": "date-time"
          },
          "jobPosts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/JobPost"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "JobPost": {
        "required": [
          "description",
          "jobTitle"
        ],
        "type": "object",
        "properties": {
          "jobPostId": {
            "type": "integer",
            "format": "int32"
          },
          "jobTitle": {
            "minLength": 1,
            "type": "string"
          },
          "description": {
            "minLength": 1,
            "type": "string"
          },
          "technologyStack": {
            "type": "string",
            "nullable": true
          },
          "jobType": {
            "type": "string",
            "nullable": true
          },
          "jobRole": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "postedDate": {
            "type": "string",
            "format": "date-time"
          },
          "companyId": {
            "type": "integer",
            "format": "int32"
          },
          "company": {
            "$ref": "#/components/schemas/Company"
          }
        },
        "additionalProperties": false
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "User": {
        "required": [
          "email",
          "firstname",
          "lastname",
          "password",
          "role"
        ],
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer",
            "format": "int32"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          },
          "role": {
            "minLength": 1,
            "type": "string"
          },
          "firstname": {
            "minLength": 1,
            "type": "string"
          },
          "lastname": {
            "minLength": 1,
            "type": "string"
          },
          "verificationcode": {
            "type": "string",
            "nullable": true
          },
          "otpExpiry": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "isVerified": {
            "type": "boolean"
          },
          "location": {
            "type": "string",
            "nullable": true
          },
          "industry": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
